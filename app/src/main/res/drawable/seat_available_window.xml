<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 아래 회색 쿠션: 작고 안쪽으로 들어오게, 위쪽과 딱 붙게 -->
    <item android:top="16dp" android:left="2dp" android:right="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorDarkGray" />
            <stroke android:width="0.5dp" android:color="@color/colorLightGray"/>
            <corners android:bottomLeftRadius="3dp"
                android:bottomRightRadius="3dp"
                android:topLeftRadius="0dp"
                android:topRightRadius="0dp"/>
        </shape>
    </item>

    <!-- 위 초록 좌석 등받이: 거의 정사각형, 상단만 살짝 둥글게 -->
    <item android:top="0dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorGreen" />
            <stroke android:width="1dp" android:color="@color/colorWhite"/>
            <corners android:topLeftRadius="3dp"
                android:topRightRadius="3dp"
                android:bottomLeftRadius="0dp"
                android:bottomRightRadius="0dp"/>
        </shape>
    </item>

</layer-list>
