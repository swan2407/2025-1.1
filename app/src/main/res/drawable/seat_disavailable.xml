<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 아래 회색 쿠션 (안쪽으로 작게, 등받이와 딱 붙게) -->
    <item android:top="16dp" android:left="2dp" android:right="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#515253" />
            <stroke android:width="1dp" android:color="#888888"/>
            <corners android:bottomLeftRadius="3dp"
                android:bottomRightRadius="3dp"
                android:topLeftRadius="0dp"
                android:topRightRadius="0dp"/>
        </shape>
    </item>

    <!-- 위쪽 회색 좌석 등받이 (#999696), 위만 둥글게 -->
    <item android:top="0dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#999696" />
            <stroke android:width="2dp" android:color="#FFFFFF"/>
            <corners android:topLeftRadius="3dp"
                android:topRightRadius="3dp"
                android:bottomLeftRadius="0dp"
                android:bottomRightRadius="0dp"/>
        </shape>
    </item>

</layer-list>
