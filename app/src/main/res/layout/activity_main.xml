<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">




    <Button
        android:id="@+id/titlebutton"
        android:layout_width="420dp"
        android:layout_height="60dp"
        android:backgroundTint="#0F66AE"
        android:padding="0dp"
        android:text="2층 커뮤니티라운지"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        app:cornerRadius="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    <!--돌아가기 버튼-->




    <ImageButton
        android:id="@+id/buttonback"
        android:layout_width="60dp"
        android:layout_height="55dp"
        android:layout_marginTop="3dp"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:contentDescription="뒤로 가기"
        android:src="@drawable/ic_arrow_back"
        app:tint="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/seatButton3"
        android:layout_width="15dp"
        android:layout_height="20dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="60dp"
        android:backgroundTint="#00BCD4"
        android:textSize="12sp"
        app:cornerRadius="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />




    <TextView
        android:layout_width="58dp"
        android:layout_height="30dp"
        android:layout_marginStart="70dp"
        android:background="@android:color/transparent"
        android:text="일반좌석"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titlebutton" />


    <Button
        android:id="@+id/seatButton4"
        android:layout_width="15dp"
        android:layout_height="20dp"
        android:layout_marginStart="130dp"
        android:layout_marginTop="60dp"
        android:backgroundTint="#0B7A26"
        android:textSize="12sp"
        app:cornerRadius="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />




    <TextView
        android:layout_width="58dp"
        android:layout_height="30dp"
        android:layout_marginStart="150dp"
        android:layout_marginTop="60dp"
        android:background="@android:color/transparent"
        android:text="창가석"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/seatButton5"
        android:layout_width="15dp"
        android:layout_height="20dp"
        android:layout_marginStart="200dp"
        android:backgroundTint="#999696"
        android:textSize="12sp"
        app:cornerRadius="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titlebutton" />




    <TextView
        android:layout_width="53dp"
        android:layout_height="35dp"
        android:layout_marginStart="220dp"
        android:background="@android:color/transparent"
        android:text="이용중"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titlebutton" />




    <Button
        android:id="@+id/seatButton6"
        android:layout_width="15dp"
        android:layout_height="20dp"
        android:layout_marginStart="270dp"
        android:backgroundTint="#515252"
        android:textSize="12sp"
        app:cornerRadius="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titlebutton" />


    <TextView
        android:layout_width="58dp"
        android:layout_height="30dp"
        android:layout_marginStart="280dp"
        android:layout_marginEnd="50dp"
        android:background="@android:color/transparent"
        android:text="이용불가"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titlebutton" />








    <!-- 좌석 -->

    <HorizontalScrollView
        android:id="@+id/hScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="horizontal"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/seatButton6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/seatContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="20dp"/>
    </HorizontalScrollView>

    <!--안내 메시지-->





</androidx.constraintlayout.widget.ConstraintLayout>
